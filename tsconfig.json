{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "lib": ["es2015", "es2020", "dom"],
      "types": ["node"]
    },
    "include": ["src/**/*"]
  }
  